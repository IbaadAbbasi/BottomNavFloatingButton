<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_train_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Green Lines Islamabad"
        android:textAlignment="textStart"
        android:textColor="@color/darkOrange"
        android:textColorHint="@color/darkOrange"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/txt_route"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="150dp"
        android:text="Lahore Rawalpindi"
        android:fontFamily="@font/roboto_regular"
        android:textAlignment="textStart"
        android:textColor="@color/txtcolordashboard"
        android:textColorHint="@color/txtcolordashboard"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_train_name">

    </TextView>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        android:text="2022-02-01"
        android:textColor="@color/txtcolordashboard"
        android:textColorHint="@color/txtcolordashboard"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_route"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt_route"
        app:layout_constraintTop_toTopOf="@+id/txt_route">

    </TextView>

    <TextView
        android:id="@+id/txt_booked_tickets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
       android:textAlignment="textStart"
        android:text="200 tickets booked"
        android:textColor="@color/txtcolordashboard"
        android:textColorHint="@color/txtcolordashboard"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_route"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_route"
        app:layout_constraintTop_toBottomOf="@+id/txt_route"
        app:layout_constraintVertical_bias="1.0">
    </TextView>

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        android:text="25000.00 Pkr"
        android:textColor="@color/txtcolordashboard"
        android:textColorHint="@color/txtcolordashboard"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/txt_date"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt_booked_tickets"
        app:layout_constraintTop_toBottomOf="@+id/txt_date"/>

    <ImageView
        android:id="@+id/SplitLine_hor2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dash_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>