<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic"
        tools:context=".fragments.BatchFragment">

        <TextView
            android:id="@+id/tvCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="Collection"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etCollection"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/edittextbgheader"
            android:editable="false"
            android:gravity="left"
            android:hint="300,000"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingTop="@dimen/_13sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvCollection"
            app:layout_constraintTop_toBottomOf="@+id/tvCollection" />

        <TextView
            android:id="@+id/tvCollectonInfo"
            android:layout_width="0dp"
            android:layout_height="@dimen/_81sdp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittextbgheader"
            android:gravity="center"
            android:padding="@dimen/_16sdp"
            android:text="آپ کی جمع کردہ رقم 23565 کے مقابلے میں 300,000   ہے، براہ مہربانی بیچ بند کریں۔"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="@+id/etCollection"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etCollection"
            app:layout_constraintTop_toBottomOf="@+id/etCollection" />

        <TextView
            android:id="@+id/btnBatchClose"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/jameel_noori"
            android:background="@drawable/btnbg"
            android:gravity="center"
            android:text="بند کریں ۔"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="@+id/tvCollectonInfo"
            app:layout_constraintStart_toStartOf="@+id/tvCollectonInfo"
            app:layout_constraintTop_toBottomOf="@+id/tvCollectonInfo"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>